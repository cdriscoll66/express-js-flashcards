extends layout.pug

block content
        section#content 
          h2= text
          if side == 'question'
            if hint 
              p
                i Hint: #{hint}
            else
              p No hint for this card.
          a(href=`/cards/${id}/?side=${sideToShow}`)= sideToShowDisplay
          br 
          a(href='/cards') Next card